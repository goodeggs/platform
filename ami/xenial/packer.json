{
  "variables": {
    "aws_access_key": "{{env `AWS_ACCESS_KEY_ID`}}",
    "aws_secret_key": "{{env `AWS_SECRET_ACCESS_KEY`}}",
    "aws_security_token": "{{env `AWS_SECURITY_TOKEN`}}",
    "aws_region": "us-east-1",
    "version": "{{isotime \"20060102T150405\"}}"
  },
  "builders": [
    {
      "type": "amazon-ebs",
      "access_key": "{{user `aws_access_key`}}",
      "secret_key": "{{user `aws_secret_key`}}",
      "token": "{{user `aws_security_token`}}",
      "region": "{{user `aws_region`}}",
      "source_ami": "ami-6edd3078",
      "instance_type": "t2.micro",
      "ssh_username": "ubuntu",
      "communicator": "ssh",
      "ssh_pty": true,
      "ami_name": "Good Eggs Xenial Image {{user `version`}}"
    }
  ],
  "provisioners": [
    {
      "type": "file",
      "source": "daemon.json",
      "destination": "/tmp/daemon.json"
    },
    {
      "type": "file",
      "source": "logspout.service",
      "destination": "/tmp/logspout.service"
    },
    {
      "type": "file",
      "source": "sumologic.service",
      "destination": "/tmp/sumologic.service"
    },
    {
      "type": "file",
      "source": "tsc-clocksource.service",
      "destination": "/tmp/tsc-clocksource.service"
    },
    {
      "type": "file",
      "source": "docker-swapoff",
      "destination": "/tmp/docker-swapoff"
    },
    {
      "type": "file",
      "source": "docker-swapoff.crontab",
      "destination": "/tmp/docker-swapoff.crontab"
    },
    {
      "type": "file",
      "source": "docker-reaper",
      "destination": "/tmp/docker-reaper"
    },
    {
      "type": "file",
      "source": "docker-reaper.crontab",
      "destination": "/tmp/docker-reaper.crontab"
    },
    {
      "type": "shell",
      "inline": [
        "while [ ! -f /run/cloud-init/result.json ]; do echo 'Waiting for cloud-init...'; sleep 10; done",

        "echo '# key-pository'",
        "curl -sSL https://github.com/goodeggs/key-pository/raw/master/bin/standalone_key_sync.sh | sudo -u ubuntu sh",

        "sudo apt-get -y update",
        "sudo apt-get -y dist-upgrade",
        "echo '# Setting Swappiness to avoide swap usage unless out of memory condition exists'",
        "echo 'vm.swappiness=0' | sudo tee -a /etc/sysctl.conf",
        "echo '# Docker'",
        "curl -fsSL https://yum.dockerproject.org/gpg | sudo apt-key add -",
        "sudo add-apt-repository \"deb https://apt.dockerproject.org/repo/ ubuntu-$(lsb_release -cs) main\"",
        "sudo apt-get -y update",
        "sudo apt-get -y install docker-engine=1.12.*",
        "sudo mv /tmp/daemon.json /etc/docker/",

        "echo '# Logspout'",
        "sudo mv /tmp/logspout.service /etc/systemd/system/",
        "sudo systemctl daemon-reload",
        "sudo systemctl enable logspout.service",

        "echo '# Sumo Logic Collector'",
        "sudo mv /tmp/sumologic.service /etc/systemd/system/",
        "sudo systemctl daemon-reload",
        "sudo systemctl enable sumologic.service",

        "echo '# TSC clocksource'",
        "sudo mv /tmp/tsc-clocksource.service /etc/systemd/system/",
        "sudo systemctl daemon-reload",
        "sudo systemctl enable tsc-clocksource.service",

        "echo '# Set up docker-swapoff'",
        "sudo mv /tmp/docker-swapoff /usr/local/bin/docker-swapoff",
        "sudo chmod 0755 /usr/local/bin/docker-swapoff",
        "sudo mv /tmp/docker-swapoff.crontab /etc/cron.d/docker-swapoff",
        "sudo chown root:root /etc/cron.d/docker-swapoff",

        "echo '# Set up docker-reaper'",
        "sudo mv /tmp/docker-reaper /usr/local/bin/docker-reaper",
        "sudo chmod 0755 /usr/local/bin/docker-reaper",
        "sudo mv /tmp/docker-reaper.crontab /etc/cron.d/docker-reaper",
        "sudo chown root:root /etc/cron.d/docker-reaper"
      ]
    }
  ]
}

